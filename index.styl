* { box-sizing: border-box }

html
  font-size: 16px
  line-height: 24px

body
  margin: 0
  background-color: #f9f9f9
  color: #444
  font-family: 'Open Sans', sans-serif

.padded
  padding-left: 1.5rem
  padding-right: 1.5rem

.v-spaced
  margin-bottom: 6rem

.v-half
  margin-bottom: 3rem

.u-texthidden
  font-size: 0 !important

.constrained
  max-width: 800px
  margin-left: auto
  margin-right: auto

h1, h2, h3
  margin: 0

a
  color: #4285F4
  text-decoration: none

  &:hover, &:active
    color: rgba(#4285F4, 80%)

pre, code, tt
  font-family: Consolas, "Liberation Mono", Menlo, Courier, monospace

.contact
  text-align: center
  margin-bottom: 2rem

.pgp
  @extend .padded
  text-align: center
  font-size: 1rem

.fingerprint
  white-space: pre-wrap

.recent-posts
  @extend .padded, .v-spaced
  text-align: center
  font-size: 1.5rem

  li
    margin-bottom: 2rem

.link-white
  color: white;

  &:hover, &:active
    color rgba(255, 255, 255, 0.8)

  &:active
    color rgba(255, 255, 255, 0.6)

.contact-logo
  width: 40px
  height: 40px
  margin: 0 10px
  g, path
    fill: #212121
    stroke: #212121

  a:hover &
    g, path
      fill: white
      stroke: white

.bitbucket-logo
  max-width: 100%
  height: 120px

.logo
  max-width: 100%
  height: 60px

.img-block
  display: block
  width: 100%

.Panel-title
  @extend .padded, .v-spaced
  font-size: 32px
  text-align: center
  line-height: 1.5

  @media(max-width: 600px)
    font-size: 24px;

.Panel-body
  @extend .padded, .constrained, .v-spaced

.Panel-subtitle
  @extend .padded
  font-size: 18px
  line-height: 24px
  text-align: center
  margin-bottom: 2.5rem

.Panel
  @extend .v-spaced
  min-height: 20rem
  @media(max-width: 600px)
    min-height: 15rem

.Panel--main
  position: relative
  color: white
  background-color: #4285F4
  padding-top: 5rem
  padding-bottom: 5rem

  @media(max-width: 600px)
    padding-top: 3.5rem

  .Panel-title
    font-size: 3rem
    margin-bottom: 1.5rem
    @media(max-width: 600px)
      font-size: 34px

.profile-img
  position: absolute
  bottom: -30%
  left: 20px
  width: 256px
  box-shadow: 1px 1px 5px #999
  border-radius: 50%
  transition: left 400ms, bottom 400ms, width 400ms

  @media(max-width: 1150px)
    bottom: -10%
    width: 128px
    left: 50%
    transform: translateX(-50%)

.tech-logos
  @extend .constrained
  display: flex
  flex-wrap: wrap

.tech-logo
  flex: 1
  filter: grayscale(100%)
  height: 70px
  margin: 20px

  &:hover
    filter: none

ul
  list-style: none

.footer
  font-size: 10px
  padding: 1rem


