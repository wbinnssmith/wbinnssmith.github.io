* { box-sizing: border-box }

html
  font-size: 8px

body
  margin: 0
  background-color: #eee
  color: #444
  font-family: 'Open Sans', sans-serif

h1, h2, h3
  margin: 0

a
  color: #5677fc
  text-decoration: none

  &:hover, &:visited
    color: #2a36b1

.logo
  max-width: 100%
  height: 60px

.img-block
  display: block
  width: 100%

.u-texthidden
  font-size: 0 !important

.constrained
  max-width: 800px
  margin: 0 auto

.padded
  padding-left: 3rem
  padding-right: 3rem

.v-spaced
  margin-bottom: 9rem

.Panel-title
  @extend .v-spaced
  font-size: 36px
  text-align: center
  line-height: 42px

.Panel-body
  @extend .padded, .constrained, .v-spaced
  font-size: 14px
  line-height: 24px

.Panel-subtitle
  font-size: 18px
  line-height: 24px
  text-align: center

.Panel
  @extend .v-spaced
  min-height: 40rem
  @media(max-width: 600px)
    min-height: 30rem

.Panel--main
  position: relative
  color: white
  background-color: #5677fc
  padding-top: 14rem
  padding-bottom: 14rem

  .Panel-title
    font-size: 48px
    margin-bottom: 3rem

.profile-img
  position: absolute
  bottom: -30%
  left: 20px
  box-shadow: 1px 1px 5px #999
  border-radius: 50%

  @media(max-width: 1320px)
    bottom: -10%
    width: 128px
  
.tech-logos
  @extend .constrained
  display: flex

.tech-logo
  flex: 1
  filter: grayscale(100%)
  -webkit-filter: grayscale(100%)
  height: 70px
  margin: 20px

  &:hover
    filter: none
    -webkit-filter: none

ul
  list-style: none

.footer
  font-size: 10px
  padding: 2rem
    

